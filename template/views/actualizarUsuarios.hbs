{{>header}}

<div class="container">
 	
    <div class="row mt-2">
        <div class="card w-100">
            <div class="card-body">
            <h2>Actualizacion de Usuarios</h2>
            <br>
            <form action="/actualizarDatos" method="post">
            <div class="form-group">
                <label for="listUsuario">Usuario</label>
                        {{{selectActualizar}}}
            </div>
            <div class="form-row">
			    <div class="form-group col-md-6">
			      <label for="docIdentidad">Documento Identidad</label>
			      <input type="number" class="form-control" id="docIdentidad" name="docIdentidad" placeholder="Documento Identidad" required>
			    </div>
                <div class="form-group col-md-6">
			      <label for="nombre">Nombre</label>
			      <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre" required>
			    </div>
			</div>
            <div class="form-row">
                <div class="form-group col-md-6">
			      <label for="email">E-mail</label>
			      <input type="text" class="form-control" id="email" name="email" placeholder="E-mail" required>
			    </div>
			    <div class="form-group col-md-6">
			      <label for="telefono">Teléfono</label>
			      <input type="number" class="form-control" id="telefono" name="telefono" placeholder="Teléfono" required>
			    </div>
			    
			</div>
            <button type="submit" class="btn btn-primary">Actualizar</button>
            </form>

            </div>
        </div>	
    </div>

</div>

{{>footer}}